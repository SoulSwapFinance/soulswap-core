{
  "name": "soulswap-core",
  "description": "ðŸ•¯ Core contracts for the SoulSwap Exchange",
  "version": "0.1.0",
  "homepage": "https://soulswap.finance",
  "repository": {
    "type": "git",
    "url": "https://github.com/soulswapfinance/soulswap-core"
  },
  "publishConfig": {
    "registry": "http://registry.npmjs.org"
  },
  "files": [
    "contracts",
    "build"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "lint": "yarn prettier ./test/*.ts --check",
    "lint:fix": "yarn prettier ./test/*.ts --write",
    "clean": "rimraf ./build/",
    "precompile": "yarn clean",
    "compile": "waffle .waffle.json",
    "pretest": "yarn compile",
    "test": "mocha",
    "prepublishOnly": "yarn test",
    "flat:factory": "truffle-flattener contracts/SoulSwapFactory.sol > flats/SoulSwapFactory_flat.sol",
    "flat:pair": "truffle-flattener contracts/SoulSwapPair.sol > flats/SoulSwapPair_flat.sol"
  },
  "devDependencies": {
    "@types/chai": "^4.2.21",
    "@types/mocha": "^8.2.3",
    "chai": "^4.2.0",
    "ethereumjs-util": "^7.1.0",
    "mocha": "^9.0.2",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "solc": "^0.5.16",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5"
  },
  "license": "MIT",
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "babel-register": "^6.26.0",
    "dotenv": "^10.0.0",
    "truffle": "^5.4.0",
    "truffle-flattener": "^1.5.0",
    "truffle-hdwallet-provider": "^1.0.17"
  }
}
